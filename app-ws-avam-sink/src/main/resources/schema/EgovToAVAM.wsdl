		Service Deklaration
	 -->
	<service name="EgovService">
		<port binding="tns:EgovPortBinding" name="EgovService">
			<soap:address location="http://localhost:9080/AVAM_Web/services/EgovService"/>
		</port>
	</service>
</definitions>